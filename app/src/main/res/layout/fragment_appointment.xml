<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryLight"
            android:orientation="horizontal">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:orientation="horizontal"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:id="@+id/appointment_family"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/text_margin"
                    android:layout_marginRight="@dimen/text_margin"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:text="Family"
                    android:textAlignment="gravity"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textColor="@color/colorCardText"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!--<ImageButton-->
                    <!--android:id="@+id/appointment_list_button"-->
                    <!--android:layout_width="50dp"-->
                    <!--android:layout_height="50dp"-->
                    <!--android:layout_marginLeft="3dp"-->
                    <!--android:layout_marginRight="3dp"-->
                    <!--android:background="@null"-->
                    <!--android:src="@android:drawable/ic_menu_agenda"-->
                    <!--android:layout_above="@+id/appointment_time"-->
                    <!--android:layout_toStartOf="@+id/appointment_reminder_button" />-->

                <ImageButton
                    android:id="@+id/appointment_reminder_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:src="@android:drawable/stat_notify_chat"
                    android:tint="#737171"
                    android:layout_alignParentEnd="false"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="3dp" />

                <TextView
                    android:id="@+id/appointment_date"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="@dimen/text_margin"
                    android:clickable="true"
                    android:text="Date"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textColor="@color/colorCardText"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:gravity="center_vertical|left" />

                <TextView
                    android:id="@+id/appointment_time"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginRight="@dimen/text_margin"
                    android:clickable="true"
                    android:text="Time"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textColor="@color/colorCardText"
                    android:gravity="center_vertical|left"
                    android:layout_alignTop="@+id/appointment_date"
                    android:layout_toEndOf="@+id/appointment_date"
                    android:layout_marginLeft="@dimen/text_margin" />

                <TextView
                    android:id="@+id/appointment_none"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="false"
                    android:layout_marginLeft="@dimen/text_margin"
                    android:layout_marginRight="@dimen/text_margin"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="No Appointment"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textColor="@color/colorCardText"
                    android:visibility="gone"
                    android:layout_alignParentStart="false"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true" />

                <ImageButton
                    android:id="@+id/appointment_checkbox_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/colorPrimaryLight"
                    android:src="@drawable/ic_check"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="3dp" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
