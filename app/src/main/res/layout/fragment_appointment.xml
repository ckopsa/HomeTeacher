<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="2dp"
    android:orientation="horizontal">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryLight"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/appointment_checkbox_button"
                android:src="@drawable/ic_check"
                android:background="@color/colorPrimaryLight"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true" />
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:background="@null"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/appointment_family"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:textSize="20sp"
                    android:text="Family"
                    android:textStyle="bold"
                    android:background="@drawable/text_border"
                    android:textColor="@color/colorBackground"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:layout_marginLeft="@dimen/text_margin"
                    android:layout_marginRight="@dimen/text_margin"
                    android:textAlignment="gravity"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:gravity="center_vertical|center_horizontal"
                    android:clickable="true"/>

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_list"
                    android:id="@+id/appointment_list_button"
                    android:background="@null"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/appointment_family"
                    android:layout_marginBottom="10dp" />

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@android:drawable/ic_popup_reminder"
                    android:id="@+id/appointment_reminder_button"
                    android:background="@null"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignEnd="@+id/appointment_family"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:id="@+id/appointment_date"
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:textColor="@color/colorBackground"
                    android:background="@drawable/text_border"
                    android:text="Date"
                    android:padding="10dp"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:layout_marginLeft="@dimen/text_margin"
                    android:layout_marginRight="@dimen/text_margin"
                    android:layout_below="@id/appointment_family"
                    android:clickable="true"
                    android:gravity="center"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="false"
                    android:layout_marginTop="-35dp" />

                <TextView
                    android:id="@+id/appointment_time"
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:textColor="@color/colorBackground"
                    android:background="@drawable/text_border"
                    android:text="Time"
                    android:padding="10dp"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:clickable="true"
                    android:layout_marginLeft="@dimen/text_margin"
                    android:layout_marginRight="@dimen/text_margin"
                    android:gravity="center"
                    android:layout_below="@id/appointment_date"
                    android:layout_alignParentBottom="false"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:id="@+id/appointment_none"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:textColor="@color/colorBackground"
                    android:background="@drawable/text_border"
                    android:text="No Appointment"
                    android:padding="10dp"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:clickable="true"
                    android:layout_marginLeft="@dimen/text_margin"
                    android:layout_marginRight="@dimen/text_margin"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
